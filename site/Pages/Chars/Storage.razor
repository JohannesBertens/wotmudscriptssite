@page "/chars/storage"
@using site.Data
@inject RentItemsService RentItemsService
@inject IJSRuntime JSRuntime
@implements IDisposable

<h1>Storage info online</h1>

<p>This is all your stuff in rent storage.</p>
@if (rentItems == null)
{
    <p><em>Loading... hold tight!</em></p>
}
else
{
    <table id="storageTable" class="table table-striped table-bordered display compact" style="width:100%">
        <thead>
            <tr>
                <th>City</th>
                <th>Room</th>
                <th>Item</th>
                <th>Character</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rentItem in rentItems)
            {
                <tr>
                    <td>@rentItem.city</td>
                    <td>@rentItem.name</td>
                    <td>@rentItem.item</td>
                    <td>@rentItem.character</td>
                </tr>
            }
        </tbody>
    </table>
}

@code{
    private RentItem[] rentItems;

    protected override async Task OnInitializedAsync()
    {
        rentItems = await RentItemsService.GetRentItemsAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntime.InvokeVoidAsync("toDataTable", "#storageTable");
    }

    public void Dispose()
    {
        JSRuntime.InvokeVoidAsync("removeDataTable", "#storageTable");
    }
}