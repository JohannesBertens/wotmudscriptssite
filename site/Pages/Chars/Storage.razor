@page "/chars/storage"

<h1>Storage info online</h1>

<AuthorizeView>
    <Authorized>

        <p>This is all your stuff in rent storage.</p>
        @if (rentItems == null)
        {
            <p><em>Loading... hold tight!</em></p>
        }
        else
        {
            <table id="storageTable" class="table table-striped table-bordered display compact" style="width:100%">
                <thead>
                    <tr>
                        <th>City</th>
                        <th>Room</th>
                        <th>Item</th>
                        <th>Character</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rentItem in rentItems)
                    {
                        <tr>
                            <td>@rentItem.city</td>
                            <td>@rentItem.name</td>
                            <td>@rentItem.item</td>
                            <td>@rentItem.character</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </Authorized>
    <NotAuthorized>
        <p>You need to <a href="Identity/Account/Login">Log in</a> to see your character storage.</p>
    </NotAuthorized>
</AuthorizeView>